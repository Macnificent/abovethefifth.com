.font-heading
	// font-family Verdana, Geneva, sans-serif
	font-family Helvetica,sans-serif
	letter-spacing 1px

.font-paragraph
	font-family: Palatino, 'Palatino Linotype', 'Palatino LT STD', 'Book Antiqua', Georgia, serif;

.bold
	font-weight bold

h1, h2, h3
	@extend .font-heading,
			.bold

	color #fff
	padding 0 0 6px 0
	// border-bottom: 1px solid #fff

h1
	font-size: 2.5em
	margin 15px

h2
	font-size 2em;
	margin 15px

p
	@extend .font-paragraph
	line-height 21px
	font-size 19px

a
	color #fff